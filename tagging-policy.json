{
  "properties": {
      "mode": "Indexed",

      "parameters": {
        "tagName": {
          "type": "String",
          "metadata": {
            "displayName": "Tag name",
            "description": "Name of the tag to enforce"
          }
        }
      },
      "policyRule": {
          "if": {
              "not": {
                  "field": "location",
                  "in": "[parameters('allowedLocations')]"
              }
          },
          "then": {
              "effect": "deny"
          }
      }
  }
}