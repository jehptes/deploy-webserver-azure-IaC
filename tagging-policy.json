{   
  "properties": {
    "mode": "Indexed",
    "parameters": {
      "tagName": {
        "type": "String",
        "metadata": {
          "description": "Name of the tag to be enforce",
          "displayName": "Tag name"
        }
      }
    },
    "policyRule": {
      "if": {
        "allof": [{
            "field": "[concat('tags[', parameters('tagName'), ']')]",
            "exists": "false"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}